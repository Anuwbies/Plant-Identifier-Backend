# ---------- Frontendâ†’Backend URLs ----------
VITE_PROXY_API_URL=http://localhost:5000
VITE_API_URL=http://localhost:8000

# ---------- Ollama ----------
OLLAMA_HOST=http://127.0.0.1:11434
# Vision model (use one you actually have pulled)
OLLAMA_MODEL=llava:7b
# Text model used for /explain (can be same as vision if you prefer)
OLLAMA_TEXT_MODEL=Allen_Rodas11/llama3-plant

# ---------- PlantNet ----------
PLANTNET_API_KEY=2b10MvRbnEl4IzajmVAHrNAsO

# Turn PlantNet on. We support BOTH names; either can be set to enable.
USE_PLANTNET=true
USE_PLANTNET_FALLBACK=true

# If 1, when a gate would block, we try PlantNet once; if strong, we let it through.
REQUIRE_PLANTNET_CONFIRMATION=1

# Fruit/roots policy (0 or 1)
BLOCK_FRUITS_EVEN_IF_ATTACHED=0
ALLOW_HARVESTED_ROOTS=1

# ---------- Django ----------
DJANGO_DEBUG=1
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1
DJANGO_CORS_ALLOW_ORIGINS=http://localhost:5173
DJANGO_CSRF_TRUSTED_ORIGINS=http://localhost:5173

# Concurrency + fast-path
CONCURRENT_MODE=1
EARLY_RETURN_OK=1          # set 0 if you always want PN considered
TOP_CONF_OK=0.35           # LLaVA confidence needed for early return

# Timeouts
CONC_LLAVA_TIMEOUT=60
CONC_PN_TIMEOUT=80

# PlantNet upload downscale
PN_MAX_EDGE=1024
PN_JPEG_QUALITY=85

# Caching
CACHE_ENABLED=1
CACHE_SIZE=128
